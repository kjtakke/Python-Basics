import pandas as pd
from pandas import DataFrame

df1 = pd.DataFrame(
	{
		"id":[4,2,1,3],
		"FName":["John","Kris","Mat","Ron"]
		
	}
	
)
print(df1)
print("")

df2 = pd.DataFrame(
	{
		"id":[1,2,4],
		"LName":["Tax","Rogers","Ted"],
		"MName":["Ryan","Jone","Pip"],
		"Religion":["Crst","Crst","N/A"],
	}
	
)
print(df2)
print("")

df = pd.merge(
df1,
df2,
how='outer',
left_on="id",
right_on="id",
validate='many_to_many'
)

print(df)
